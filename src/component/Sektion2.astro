<style>
  .sektion_container {
    width: 100dvw;
    height: fit-content;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 100px 1fr;

    column-gap: var(--gap4);
    outline: dashed 3px red;
  }
  h2 {
    height: 50px;
    grid-column: 1/-1;
    grid-row: 1/2;
    justify-self: center;
    align-self: last baseline;
  }
  .text_left_container {
    height: fit-content;
    grid-column: 1/2;
    grid-row: 1/-1;

