    grid-row: 1/3;
    z-index: 1;
    max-height: 300px;
    width: 100%;

    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
  }
  .img1 img {
    grid-column: 1/-1;
    grid-row: 1/-1;
    max-width: 100%;
    min-height: 200px;
    max-height: 100%;
    aspect-ratio: 0.84:1;
    justify-self:start;
    align-self: last baseline;
  }
  .menu {
    grid-column: 2/-1;
    grid-row: 2/-1;
    z-index: 2;
    outline: dashed 3px rgb(165, 20, 194);
  }
  .menu img {
    width: 100%;
  }
  .text_right_container {
    grid-column: 1/-1;
    grid-row: 2/-1;
    outline: dashed 3px rgb(20, 37, 194);
  }
</style>
